(in-package :stumpwm)

(setq *debug-level* 0)

(redirect-all-output (data-dir-file "debug-output" "txt"))

(run-shell-command "xscreensaver -no-splash")


(let ((custom-file (probe-file (merge-pathnames "custom.lisp" *load-truename*))))
  (if custom-file
      (load custom-file)
      (message "WARNING: no custom.lisp file")))

(load (merge-pathnames "swank.lisp"            *load-truename*))
(load (merge-pathnames "cyrillic.lisp"         *load-truename*))
(load (merge-pathnames "keys.lisp"             *load-truename*))
(load (merge-pathnames "klipper.lisp"          *load-truename*))
(load (merge-pathnames "mode-line.lisp"        *load-truename*))
(load (merge-pathnames "quicklog.lisp"         *load-truename*))
(load (merge-pathnames "screenshot.lisp"       *load-truename*))
(load (merge-pathnames "vars.lisp"             *load-truename*))
(load (merge-pathnames "window-misc.lisp"      *load-truename*))
(load (merge-pathnames "window-match.lisp"     *load-truename*))
(load (merge-pathnames "xmodmap/xmodmap.lisp"  *load-truename*))

